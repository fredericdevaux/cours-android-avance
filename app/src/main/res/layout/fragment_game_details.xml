<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        tools:context=".MainActivity">
        <ImageView android:id="@+id/gameImg"
                   android:layout_width="300dp" android:layout_height="300dp"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                   android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gameName"
                android:layout_marginTop="30dp" app:layout_constraintTop_toBottomOf="@id/gameImg"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent" android:textSize="24sp" android:textStyle="bold"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/gameDescription"
                app:layout_constraintTop_toBottomOf="@+id/gameName" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="40dp"/>
        <Button
                android:text="Voir le lien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/gameLink"
                app:layout_constraintTop_toBottomOf="@+id/gameDescription" android:layout_marginTop="60dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
